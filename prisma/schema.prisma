// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - linked to Clerk authentication
model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique // Clerk user ID
  email     String   @unique
  name      String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  workflows WorkflowFile[]

  @@index([clerkId])
  @@index([email])
}

// WorkflowFile model - stores workflow metadata
model WorkflowFile {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  content   Json?    // Stores the workflow graph/nodes as JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  owner User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  runs  WorkflowRun[]

  @@index([ownerId])
  @@index([createdAt])
}

// WorkflowRun model - stores execution history
model WorkflowRun {
  id              String   @id @default(cuid())
  workflowId      String
  triggerRunId    String?  // Trigger.dev run ID
  status          String   // "running", "completed", "failed", "partial"
  scope           String   // "full", "selected", "single"
  duration        Int?     // Duration in milliseconds
  results         Json?    // Execution results as JSON
  error           String?  // Error message if failed
  totalNodes      Int      @default(0)
  successfulNodes Int      @default(0)
  failedNodes     Int      @default(0)
  createdAt       DateTime @default(now())
  completedAt     DateTime?

  // Relations
  workflow       WorkflowFile      @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  nodeExecutions NodeExecution[]

  @@index([workflowId])
  @@index([status])
  @@index([triggerRunId])
  @@index([createdAt])
}

// NodeExecution model - stores individual node execution results
model NodeExecution {
  id            String   @id @default(cuid())
  runId         String
  nodeId        String   // React Flow node ID
  nodeType      String   // "text", "llm", "cropImage", etc.
  nodeName      String   // Display name
  status        String   // "idle", "running", "success", "failed"
  output        Json?    // Node output
  error         String?  // Error message if failed
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  duration      Int?     // Duration in milliseconds

  // Relations
  run WorkflowRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
  @@index([nodeId])
  @@index([status])
}

